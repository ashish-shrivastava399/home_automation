<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/v_spin_padding_b"
    android:paddingEnd="@dimen/v_spin_padding_b"
    android:paddingStart="@dimen/v_spin_padding_b"
    android:paddingTop="@dimen/v_spin_padding_b">

    <ImageView
        android:id="@+id/flag_icon"
        android:layout_width="@dimen/v_spin_iv_height"
        android:layout_height="@dimen/v_spin_iv_width"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/flag_india" />

    <TextView
        android:id="@+id/name_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/flag_icon"
        android:fontFamily="@font/courier_bold"
        android:paddingEnd="@dimen/v_spin_tv_padding_e"
        android:paddingStart="@dimen/v_spin_tv_padding_s"
        tools:text="India"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/v_spin_tv_text_size" />

</RelativeLayout>
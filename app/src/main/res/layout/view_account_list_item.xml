<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDeepDark"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/account_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/view_open_order_list_padding_bottom"
        android:paddingEnd="@dimen/view_open_order_list_padding_end"
        android:paddingStart="@dimen/view_open_order_list_padding_start"
        android:paddingTop="@dimen/view_open_order_list_padding_top"
        android:weightSum="10">

        <ImageView
            android:id="@+id/list_item_title_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"
            tools:src="@drawable/ic_support" />

        <LinearLayout
            android:id="@+id/list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_title_icon"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/account_name_txt_size"
                android:textStyle="bold"
                tools:text="Hello How are you" />

            <TextView
                android:id="@+id/list_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="15dp"
                android:paddingStart="0dp"
                tools:text="Hessssssllo How are you"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/account_show_txt_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignEnd="@id/list_item"
            android:contentDescription="@string/app_name"
            android:rotation="180"
            android:src="@drawable/ic_navigate_previous"
            android:tint="@android:color/darker_gray" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
